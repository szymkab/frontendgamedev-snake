{
  "name": "createjs-boilerplate",
  "version": "1.0.0",
  "main": "source/app.js",
  "repository": "git@github.com:szymkab/createjs-boilerplate.git",
  "author": "Szymon Kabelis",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --inline",
